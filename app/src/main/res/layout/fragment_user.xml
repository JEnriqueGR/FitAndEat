<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:text="Cuenta"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <!-- Sección de Usuario Actual -->
        <TextView
            android:text="USUARIO ACTUAL"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#F2F2F2"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="usuario@correo.com"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:src="@drawable/ic_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- Configuración -->
        <TextView
            android:text="INSTALACIÓN DE HARDWARE"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#F2F2F2"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Configuración del dispositivo"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:src="@drawable/ic_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- Asistencia -->
        <TextView
            android:text="ASISTENCIA AL CLIENTE"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Opción 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#F2F2F2"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ayuda y capacitación"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:src="@drawable/ic_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- Opción 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#F2F2F2"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Compartir opiniones"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:src="@drawable/ic_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- Opción 3 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#F2F2F2"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Alarma de privacidad"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:src="@drawable/ic_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- Botón cerrar sesión -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="#FF0000"
            android:background="@android:color/transparent"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
