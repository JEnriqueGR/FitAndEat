<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_background"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Título de la rutina con botón eliminar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRoutineName"
            android:text="Nombre de la rutina"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_info"
            android:contentDescription="Información de rutina"
            android:padding="4dp" />

    </RelativeLayout>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvExerciseDetails"
        android:text="Ejercicios incluidos:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Lista de ejercicios -->
    <TextView
        android:id="@+id/tvExerciseList"
        android:text="Press banca - 3 series (10kg x 12 reps)"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
