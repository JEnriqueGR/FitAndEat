<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_background"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="8dp"
    android:layout_margin="8dp"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTrainingName"
        android:text="Nombre del entrenamiento"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvExerciseDetails"
        android:text="Detalles de ejercicios:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvExerciseList"
        android:text="Ejercicio1 - 3 series (10kg x 12 reps)"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
